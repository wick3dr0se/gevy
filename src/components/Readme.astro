---
import "github-markdown-css/github-markdown.css";

interface Props {
  html: string;
  class?: string;
}

const { html, class: className = "" } = Astro.props;
---

<div class={`markdown-body ${className}`} set:html={html} />

<style>
  .markdown-body {
    background: none;
    color: var(--text);
  }

  /* Handle div alignment attributes  */
  .markdown-body :global(div[align="center"]) {
    text-align: center;
    display: block;
  }

  .markdown-body :global(div[align="right"]) {
    text-align: right;
    display: block;
  }

  .markdown-body :global(div[align="left"]) {
    text-align: left;
    display: block;
  }

  /* Inline images (direct children of divs) */
  .markdown-body :global(div > img) {
    display: inline-block;
    vertical-align: middle;
    margin: 0.25rem;
  }

  /* Inline links containing images */
  .markdown-body :global(div > a) {
    display: inline-block;
    margin: 0.25rem;
  }
</style>
