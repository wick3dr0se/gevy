---
interface Props {
  repos: any[];
}

const { repos } = Astro.props;
---

<div class="mt-6 pt-6 border-t border-[var(--border)]">
  <h2 class="text-lg font-semibold mb-4">Top Repositories</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    {
      repos.map((repo) => (
        <a
          href={repo.html_url}
          target="_blank"
          rel="noopener noreferrer"
          class="p-4 border rounded-lg hover:!border-[var(--accent)] transition-colors"
        >
          <h3 class="font-semibold truncate">{repo.name}</h3>
          {repo.description && (
            <p class="text-sm text-[var(--subtext)] mt-1 line-clamp-2">
              {repo.description}
            </p>
          )}
          <div class="mt-3 flex items-center gap-4 text-sm text-[var(--subtext)]">
            {repo.language && (
              <span class="flex items-center gap-1">
                <span class="w-3 h-3 rounded-full bg-[var(--accent)]" />
                {repo.language}
              </span>
            )}
            <span>‚≠ê {repo.stargazers_count}</span>
            <span>üî± {repo.forks_count}</span>
          </div>
        </a>
      ))
    }
  </div>
</div>
