---
import Avatar from "../users/Avatar.astro";

const { user } = Astro.props;
---

<div class="rounded-lg shadow-sm border p-6">
  <form action="/api/posts/create" method="POST" class="space-y-4">
    <div class="flex gap-4">
      <Avatar user={user} />
      <textarea
        name="content"
        placeholder="Share what you're working on..."
        required
        rows="3"
        class="flex-1 border rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 resize-none text-[var(--subtext)] border-[var(--text)]"
      ></textarea>
    </div>
    <div class="flex justify-end">
      <button
        type="submit"
        class="px-6 py-2 bg-blue-600 rounded-lg hover:bg-blue-700 transition-colors font-medium"
      >
        Post
      </button>
    </div>
  </form>
</div>
