---
import Layout from "../layouts/Layout.astro";
import { createServerSupabaseClient } from "../lib/supabase";

const supabase = createServerSupabaseClient(Astro.cookies);
const {
  data: { session },
} = await supabase.auth.getSession();

const isLoggingOut = Astro.url.searchParams.get("logout");
if (session && !isLoggingOut) {
  return Astro.redirect("/dashboard");
}

const redirectUrl = `${Astro.url.origin}/api/auth/callback`;
const message = Astro.url.searchParams.get("message");
const emailParam = Astro.url.searchParams.get("email");
---

<Layout title="Gevy - Connect with Developers">
  <div
    class="min-h-screen flex items-center justify-center px-4 bg-[var(--bg)]"
  >
    <div class="max-w-md w-full text-center">
      <h1 class="text-4xl font-bold mb-4">Gevy</h1>
      <p class="text-xl text-[var(--subtext)] mb-8">
        A social platform for developers
      </p>

      {
        message === "check-email" && (
          <div class="mb-4 p-4 bg-[var(--success)] text-white rounded-lg">
            âœ‰ï¸ Check your email for the magic link!
          </div>
        )
      }

      <div class="rounded-lg shadow-lg border p-8">
        <div class="mb-6">
          <div class="text-6xl mb-4">ğŸ‘¨â€ğŸ’»</div>
          <h2 class="text-2xl font-semibold mb-2">Get Started</h2>
          <p class="text-[var(--subtext)]">
            Sign in to connect with developers, share posts, and build your
            network.
          </p>
        </div>

        <!-- GitHub login -->
        <form action="/api/auth/signin/github" method="GET">
          <input type="hidden" name="redirectUrl" value={redirectUrl} />
          <button
            type="submit"
            class="inline-flex items-center justify-center gap-2 w-full px-6 py-3 bg-[var(--text)] rounded-lg hover:bg-[var(--subtext)] transition-colors font-medium text-[var(--bg)]"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
              ></path>
            </svg>
            Sign in with GitHub
          </button>
        </form>

        <div class="flex items-center my-6">
          <span class="flex-1 border-t"></span>
          <span class="px-3 text-[var(--subtext)] text-sm">or</span>
          <span class="flex-1 border-t"></span>
        </div>

        <!-- Email magic link login -->
        <form action="/api/auth/signin/email" method="POST">
          <input type="hidden" name="redirectUrl" value={redirectUrl} />
          <input
            type="email"
            name="email"
            placeholder="you@example.com"
            value={emailParam || ""}
            required
            class="w-full px-4 py-2 rounded border mb-2 focus:outline-none focus:ring-2 focus:ring-[var(--accent)]"
          />
          <button
            type="submit"
            class="w-full px-4 py-2 bg-[var(--accent)] text-white rounded hover:bg-blue-700 transition-colors"
          >
            Send Magic Link
          </button>
        </form>

        <div class="mt-6 text-left text-sm text-[var(--subtext)]">
          <h2 class="text-lg font-semibold mb-1">Features:</h2>
          <ul class="space-y-1">
            <li>âœ“ Share posts and updates</li>
            <li>âœ“ Like and comment on posts</li>
            <li>âœ“ Follow other developers</li>
            <li>âœ“ View GitHub activity feeds</li>
            <li>âœ“ Discover new developers</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  // Listen for auth completion in other tabs
  window.addEventListener("storage", (e) => {
    if (e.key === "auth-complete") {
      // Clear the signal
      localStorage.removeItem("auth-complete");
      // Redirect to dashboard
      window.location.href = "/dashboard";
    }
  });
</script>
