---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/logo.svg" />
		<title>{title}</title>
	</head>
	<body class="min-h-screen">
		<slot />
	</body>
</html>

<style is:global>
	@import "tailwindcss";

	:root {
		--bg: #faf5e4;
		--text: #000;
	}

	.dark {
		--bg: #232329;
		--text: #fff;
	}
	body,
	div {
		background-color: var(--bg);
		border-color: var(--border);
	}
	* {
		color: var(--text);
	}
</style>
